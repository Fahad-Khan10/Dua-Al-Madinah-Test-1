<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css" integrity="sha384-/frq1SRXYH/bSyou/HUp/hib7RVN1TawQYja658FEOodR/FQBKVqT9Ol+Oz3Olq5" crossorigin="anonymous">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/admincss.css">
  <title>Handel-Requests</title>

</head>

<body>

  <div class="wrap">
    <div class="sec">
      <div class="top_navbar">
        <div class="hamburger">
          <a href="#">
            <i class="fas fa-bars"></i>
          </a>
        </div>
      </div>

      <%booking_details.forEach(function(booking_detail){%>
      <div class="cards">
        <div class="row">

          <div class="col-lg-2 ">
            <% if(booking_detail.dp===" "){%>
              <img class="user-img" src="images/profile.png" alt="user has No Dp">
            <% } else { %>
          <img class="user-img" src="<%=booking_detail.dp%>" alt="user has No Dp">
            <% } %>

          </div>
          <div class="col-lg-7 user-name-time">
            <h2><%=booking_detail.name%></h2>
            <h3>Request Date : <%=booking_detail.booking_date%> </h3>
            <h3>Requested Time : <%=booking_detail.time%></h3>
            <h3>Status:<%=booking_detail.Status%></h3>
          </div>
          <div class="col-lg-3 see-details-button">
            <form class="" action="/handleuser" method="post">
              <button class="btn btn-outline-dark btn-lg bttn" type="submit" name="email" value="<%=booking_detail.email%>">See Details</button>
            </form>
          </div>
        </div>
      </div>
      <%})%>

      <div class="sbar">
        <div class="profile">
          <img src="images/DuaAlmadinah.jpg" alt="profile_picture">
          <h3>Dua-Almadinah</h3>
        </div>
        <ul>
          <li>
            <a href="/adminHome">
              <span class="icon"><i class="fas fa-user-shield"></i></span>
              <span class="item">Admin</span>
            </a>
          </li>
          <li>
            <a href="/createCity">
              <span class="icon"><i class="fa-solid fa-plus"></i></span>
              <span class="item">Create New City</span>
            </a>
          </li>
          <li>
            <a href="/createPackage">
              <span class="icon"><i class="fa-solid fa-plus"></i></span>
              <span class="item">Create Package</span>
            </a>
          </li>
          <li>
            <a href="/request">
              <span class="icon"><i class="fas fa-user-friends"></i></span>
              <span class="item">See requests</span>
            </a>
          </li>
          <li>
            <a href="/deleteCity">
              <span class="icon"><i class="fa-solid fa-trash-can"></i></span>
              <span class="item">Delete City</span>
            </a>
          </li>
          <li>
            <a href="/deletePackage">
              <span class="icon"><i class="fa-solid fa-trash-can"></i></span>
              <span class="item">Delete Package</span>
            </a>
          </li>
          <li>
            <a href="/entry">
              <span class="icon"><i class="fa-solid fa-arrow-trend-up"></i></span>
              <span class="item">Go To Website</span>
            </a>
          </li>
          <!-- <li>
            <a href="#">
              <span class="icon"><i class="fas fa-cog"></i></span>
              <span class="item">Settings</span>
            </a>
          </li> -->
        </ul>
      </div>

    </div>
    <script src="common.js"></script>
</body>

</html>
